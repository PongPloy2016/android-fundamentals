<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPinkLight">

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_parent"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_icon"
            android:layout_toEndOf="@+id/backImageView"
            android:text="@string/compose"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/font_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cursorImageView"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_icon"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_send" />

        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_icon"
            android:layout_toStartOf="@+id/cursorImageView"
            android:src="@drawable/ic_attach" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/margin_parent"
        android:layout_marginEnd="@dimen/margin_parent">

        <TextView
            android:id="@+id/fromTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/from"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_size" />

        <ImageView
            android:id="@+id/downArrowImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_down_arrow" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/downArrowImageView"
            android:layout_toEndOf="@id/fromTextView"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/margin_parent"
        android:layout_marginEnd="@dimen/margin_parent">

        <TextView
            android:id="@+id/toTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/to"
            android:textSize="@dimen/font_size"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/toDownArrowImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_down_arrow" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/toDownArrowImageView"
            android:layout_toEndOf="@id/toTextView"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/margin_parent"
        android:layout_marginEnd="@dimen/margin_parent"
        android:background="@android:color/transparent"
        android:textSize="@dimen/font_size"
        android:hint="@string/subject" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_parent"
        android:layout_marginTop="@dimen/margin_icon"
        android:layout_marginEnd="@dimen/margin_parent"
        android:layout_marginBottom="@dimen/margin_parent"
        android:background="@android:color/transparent"
        android:textSize="@dimen/font_size"
        android:gravity="start|top"
        android:hint="@string/compose_email" />

</LinearLayout>
